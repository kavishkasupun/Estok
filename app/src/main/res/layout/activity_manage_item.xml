<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mangeItems"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageItem">

    <include layout="@layout/inter_face" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Items"
        android:textColor="@color/skyblue"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Option"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="-358dp"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        android:textColor="@color/skyblue"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Spinner
        android:id="@+id/spinner_option"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded_border"
        android:paddingStart="15dp"
        android:spinnerMode="dropdown"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Item"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginStart="-358dp"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_option"
        android:textColor="@color/skyblue"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Spinner
        android:id="@+id/spinner_Item"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="55dp"
        android:textSize="18sp"
        android:paddingStart="15dp"
        android:background="@drawable/rounded_border"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@id/spinner_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_manageItem"
        android:layout_width="144dp"
        android:layout_height="52dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/rounded_button_bg"
        android:backgroundTint="@color/skyblue"
        android:text="@string/add"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>